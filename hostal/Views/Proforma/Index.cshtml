@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Carrito";
    IEnumerable<hostal.Models.Proforma> listProformas = new List<Proforma>();
    listProformas = @Model.proformas;
    Decimal montoTotal = @Model.montoTotal;
}
<body>
<!--Inicio Banner-->
<div class="hero-wrap hero-wrap-2" style="background-image: url('../images/banner1.jpg'); background-attachment:fixed; height: 400px;">
      <div class="overlay" style="height: 400px;" ></div>
        <div class="container">
          <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true" style="height: 400px;">
           <div class="col-md-8 ftco-animate text-center">          
             <h1 class="mb-3 bread">Reservas</h1>
            </div>
          </div>
       </div>
</div>    
<!--Fin Banner-->
<br>
<br>
<br>



<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => listProformas.FirstOrDefault().Producto.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => listProformas.FirstOrDefault().Producto.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => listProformas.FirstOrDefault().Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => listProformas.FirstOrDefault().Quantity)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Proforma item in Model.proformas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Imagen)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

    <a class="btn btn-primary button" asp-controller="Pago" asp-action="Create" asp-route-monto="@montoTotal">Pagar</a>
    <p align="center" style="font-size: 200%;">Total S/. @montoTotal</p>

</body>
